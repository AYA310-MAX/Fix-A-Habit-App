<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HabitTrackerApp.SplashScreen2"
             BackgroundColor="#1a5c49">

    <VerticalStackLayout 
        VerticalOptions="Center" 
        HorizontalOptions="Center"
        Spacing="20">

        <Label 
            Text="HABIT TRACKER"
            FontSize="28"
            FontAttributes="Bold"
            TextColor="White"
            HorizontalOptions="Center"/>

        <Label 
            Text="Build Better Habits"
            FontSize="16"
            TextColor="White"
            Opacity="0.8"
            HorizontalOptions="Center"/>

    </VerticalStackLayout>

</ContentPage>