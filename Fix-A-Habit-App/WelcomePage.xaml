<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HabitTrackerApp.WelcomePage"
             BackgroundColor="#1a6b54">

    <VerticalStackLayout 
        Padding="30"
        Spacing="30"
        VerticalOptions="Center">

        <!-- Welcome Title -->
        <Label 
            Text="WELCOME"
            FontSize="32"
            FontAttributes="Bold"
            TextColor="White"
            HorizontalOptions="Center"/>

        <Label 
            Text="Start your journey to better habits today"
            FontSize="16"
            TextColor="White"
            Opacity="0.9"
            HorizontalOptions="Center"
            HorizontalTextAlignment="Center"/>

        <!-- Get Started Button -->
        <Button 
            Text="GET STARTED"
            BackgroundColor="#2d8a6e"
            TextColor="White"
            FontAttributes="Bold"
            CornerRadius="25"
            HeightRequest="50"
            Margin="0,40,0,0"
            Clicked="OnGetStartedClicked"/>

    </VerticalStackLayout>

</ContentPage>