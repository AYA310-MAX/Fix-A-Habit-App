<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FixAHabitApp.Pages.WelcomePage"
             BackgroundColor="#1B4D3E">

	<Grid Padding="30">
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="100"/>
		</Grid.RowDefinitions>

		<!-- Welcome Content -->
		<StackLayout Grid.Row="0"
                     VerticalOptions="Center"
                     Spacing="20">

			<Label Text="WELCOME"
                   FontSize="36"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"/>

			<Label Text="Track your habits and achieve your goals"
                   FontSize="16"
                   TextColor="White"
                   HorizontalOptions="Center"
                   Opacity="0.8"/>
		</StackLayout>

		<!-- Get Started Button -->
		<Button Grid.Row="2"
                Text="GET STARTED"
                BackgroundColor="White"
                TextColor="#1B4D3E"
                FontAttributes="Bold"
                CornerRadius="25"
                HeightRequest="50"
                VerticalOptions="Center"
                Clicked="OnGetStartedClicked"/>
	</Grid>

</ContentPage>